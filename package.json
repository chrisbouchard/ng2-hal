{
  "name": "ng2-hal",
  "version": "0.1.0",
  "description": "Angular 2 library to communicate with REST services that use HAL",
  "repository": "chrisbouchard/ng2-hal",
  "scripts": {
    "build": "npm run clean && npm run build:typings && npm run build:commonjs",
    "build:commonjs": "tsc",
    "build:typings": "typings install",
    "clean": "rimraf dist",
    "postinstall": "postinstall-build dist 'npm run build'",
    "test": "karma start karma.conf.js",
    "test-ci": "npm run test -- --auto-watch --no-single-run"
  },
  "keywords": [],
  "author": "Chris Bouchard <chris@upliftinglemma.net>",
  "license": "BSD-2-Clause",
  "main": "index.js",
  "files": [
    "dist",
    "index.js",
    "index.d.ts"
  ],
  "dependencies": {
    "postinstall-build": "0.2.1",
    "uri-templates": "0.2.0",
    "wu": "2.1.0"
  },
  "devDependencies": {
    "@angular/common": "2.0.0-rc.6",
    "@angular/compiler": "2.0.0-rc.6",
    "@angular/core": "2.0.0-rc.6",
    "@angular/http": "2.0.0-rc.6",
    "@angular/platform-browser": "2.0.0-rc.6",
    "@angular/platform-browser-dynamic": "2.0.0-rc.6",
    "codelyzer": "0.0.27",
    "core-decorators": "0.12.3",
    "es6-shim": "0.35.1",
    "jasmine-core": "2.4.1",
    "karma": "1.1.2",
    "karma-chrome-launcher": "1.0.1",
    "karma-jasmine": "1.0.2",
    "karma-mocha-reporter": "2.1.0",
    "karma-phantomjs-launcher": "1.0.1",
    "karma-sourcemap-loader": "0.3.7",
    "karma-webpack": "1.8.0",
    "phantomjs-prebuilt": "2.1.11",
    "reflect-metadata": "0.1.8",
    "rimraf": "2.5.4",
    "rxjs": "5.0.0-beta.11",
    "tslint": "3.14.0",
    "typescript": "2.0.0",
    "typings": "1.3.2",
    "zone.js": "0.6.17"
  },
  "peerDependencies": {
    "@angular/core": "2.0.0-rc.6"
  }
